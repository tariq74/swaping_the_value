#include "stdafx.h"
#include <iostream>
#include<iomanip>
using namespace std;

void swap(float , float );
int main()
{
	float a, b;
	cout << "please enter two value";
	cin >> a >> b;
	swap(a, b);
	return 0;
}
void  swap(float a, float b)
{
	cout << "The value of a now is :" << a<<endl;
	cout << "The value of b  now is :" << b<< endl;
	int temp = a;
	a = b;
	b = temp;
	cout << "After swap the  value of a now is :" << a << endl;
	cout << "After swap the  value of b  now is :" << b << endl;
}
